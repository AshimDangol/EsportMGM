rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for checking roles within a clan
    function isClanOwner(clanId) {
      return request.auth.uid == get(/databases/$(database)/documents/clans/$(clanId)).data.ownerId;
    }

    function isClanCoAdmin(clanId) {
      return request.auth.uid in get(/databases/$(database)/documents/clans/$(clanId)).data.coAdminIds;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      // Users can only update their own profile, and they cannot change their friend list directly through this rule.
      allow update: if request.auth.uid == userId && !('friendIds' in request.resource.data);
    }

    // Rules for the 'announcements' collection
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == resource.data.authorId;
    }

    // Rules for the 'clans' collection
    match /clans/{clanId} {
      allow read, create: if request.auth != null;
      allow delete: if isClanOwner(clanId);
      
      // Detailed update rules for clans
      allow update: if 
        // The Owner can change anything.
        isClanOwner(clanId) ||
        // A Co-Admin can manage members and requests, but cannot change the owner or privacy.
        (isClanCoAdmin(clanId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['ownerId', 'privacy'])) ||
        // Any authenticated user can request to join a private clan.
        (request.auth != null && resource.data.privacy == 'private' && request.resource.data.pendingMemberIds.hasAll(resource.data.pendingMemberIds.concat([request.auth.uid]))) ||
        // Any authenticated user can join a public clan.
        (request.auth != null && resource.data.privacy == 'public' && request.resource.data.memberIds.hasAll(resource.data.memberIds.concat([request.auth.uid])));
    }

    // Rules for the 'teams' collection
    match /teams/{teamId} {
      allow read: if request.auth != null;
      // Only the owner of the associated clan can create, update, or delete a team.
      allow create: if isClanOwner(request.resource.data.clanId);
      allow update, delete: if isClanOwner(resource.data.clanId);
    }

    // Rules for the 'tournaments' collection
    match /tournaments/{tournamentId} {
      allow read, create: if request.auth != null;
      // Only the tournament admin can update or delete it.
      allow update, delete: if request.auth.uid == resource.data.adminId;
    }

    // Rules for the 'players' collection
    match /players/{playerId} {
       allow read: if request.auth != null;
       // A user can only manage their own player profile.
       allow create, update, delete: if request.auth.uid == request.resource.data.userId;
    }

    // Default catch-all rule: Disallow all reads/writes to any other collection
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
